.message{data: {message: {id: message.id}}}

.chat-group
  .chat-group__info
    .chat-group__info__contributor
      = message.user.name
    .chat-group__info__time-stamp
      = message.created_at.strftime("%Y年%m月%d日 %h時%m分")
  .chat-group__message
    - if message.body.present?
      %p.chat-group__message__body
        = message.body
    = image_tag message.image.url, class: 'chat-group__message__image' if message.image.present?
